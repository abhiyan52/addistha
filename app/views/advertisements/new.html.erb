<div class="container ">
	<div class="row">
		<div class="col-xs-3 col-md-3">
			
		</div>
		<div class="col-xs-9 col-md-9">
			<div class="form-container">
				<%= form_for @advertisement, url: advertisements_path(), :class=>"form-control" do |f| %>
					<%= label_tag "Select the start time for slot :" %>

					<%= f.datetime_select :slot_start_time ,:start_year => Time.now.year, :end_year => Time.now.year, :discard_year => true, :class => "form_control" %>
					<br>		
					<%= label_tag "Select the start time for slot :" %>
					<%= f.datetime_select :slot_end_time, :start_year => Time.now.year, :end_year => Time.now.year, :discard_year => true, :class => "form_control" %>					
					<br>
					
					<%= f.hidden_field("agency_id") %>
					<br>
					<%= label_tag "Select the end Time for bidding :" %>
					<%= f.datetime_select :bid_end_time, :start_year => Time.now.year, :end_year => Time.now.year, :discard_year => true, :class => "form_control" %>
					<br>
					
					<%= label_tag "Enter the base price :" %>
					<%= f.number_field :base_price, :class=>"form-control" %>
					<br>
					<%= label_tag "Check This for start bidding immediately :" %>
					<%= f.check_box :status, {}, "bidding","idle"%>
					<br>
					<%= f.submit("Create Slot") %>
					

					
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
